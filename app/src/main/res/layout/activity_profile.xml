<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    android:background="@drawable/side_nav_bar"
    tools:context=".ProfileActivity">
    
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/autour_one"
            android:paddingRight="110dp"
            android:text="Hình ảnh: "
            android:textColor="#EFDCB4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageProfile"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:gravity="right"
            android:src="@drawable/ic_launcher_background" />
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Mã nhân viên: "
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/idNameProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="1"
            android:layout_marginLeft="20dp"
            android:background="@drawable/custom_input"
            android:width="200dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"
            android:text="Tên nhân viên: "/>
        <EditText
            android:id="@+id/displayNameProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/custom_input"
            android:paddingRight="10dp"
            android:text="Dương Minh Trí"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"
            android:text="SĐT: "/>
        <EditText
            android:id="@+id/phoneProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="144dp"
            android:background="@drawable/custom_input"
            android:paddingRight="10dp"
            android:text="0931177949"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"
            android:text="Địa chỉ: "/>
        <EditText
            android:id="@+id/addressProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"

            android:background="@drawable/custom_input"
            android:paddingRight="10dp"
            android:layout_marginLeft="105dp"
            android:text="Độc lạ bình dương"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"
            android:text="Mật khẩu: "/>
        <EditText
            android:id="@+id/passwordProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:background="@drawable/custom_input"
            android:paddingRight="10dp"
            android:layout_marginLeft="82dp"
            android:text="0931177949"/>
    </LinearLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#EFDCB4"
            android:fontFamily="@font/autour_one"
            android:textStyle="bold"
            android:text="Chức vụ: "/>
        <TextView
            android:id="@+id/positionProfile"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@drawable/custom_input"
            android:layout_marginLeft="95dp"
            android:paddingRight="10dp"
            android:text="Trùm cuối"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/changeProfileBtn"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_button"
        android:fontFamily="@font/autour_one"
        android:text="CONFIRM"
        android:layout_margin="70dp"
        android:textStyle="bold"
        android:textColor="#EFDCB4"
        android:textSize="20sp" />
</LinearLayout>