<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="25dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TABLE MANAGING"
            android:textSize="35sp"
            android:padding="12dp"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:background="@drawable/bg_yellow_corner_16_topleft_topright"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">
            <EditText
                android:id="@+id/txtTableID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ID"
                android:minHeight="48dp"
                android:inputType="text"/>

            <Spinner
                android:id="@+id/txtTableStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="Trạng thái table"
                android:minHeight="48dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnPushTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Save"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/btnCancelTable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Cancel"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>