<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SHIFT MANAGING"
                android:textSize="35sp"
                android:padding="24dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:background="@drawable/custom_button_dateend"
                android:textStyle="bold"/>
            <DatePicker
                android:id="@+id/datePickerDialog"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:calendarViewShown="false"
                android:datePickerMode="spinner" />
            <View
                android:layout_gravity="center"
                android:layout_width="270dp"
                android:layout_height="3dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_button"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shift:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/autour_one"
                android:textStyle="bold"
                android:textSize="20sp"/>
            <Spinner
                android:id="@+id/spinScheduleShift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"

                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barista:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/autour_one"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinScheduleStaffBarista"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />

            <Spinner
                android:id="@+id/spinScheduleStaffBarista2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Waiter:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/autour_one"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinScheduleStaffWaiter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />

            <Spinner
                android:id="@+id/spinScheduleStaffWaiter2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guard:"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="24dp"
                android:fontFamily="@font/autour_one"
                android:textStyle="bold"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/spinScheduleStaffGuard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:contentDescription="@android:string/autofill"
                android:minHeight="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.appcompat.widget.AppCompatButton
                    android:background="#1DDD25"
                    android:id="@+id/btnPushSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/autour_one"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="24dp"
                    android:layout_weight="1"
                    android:text="Save" />

                <androidx.appcompat.widget.AppCompatButton
                    android:fontFamily="@font/autour_one"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:background="#F44336"
                    android:textColor="@color/white"
                    android:id="@+id/btnCancelSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="24dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="Cancel" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>